					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="0" Y="0"/>
						</Anchor>
					</Anchors>					
				</Label>
        <Label name="$parentId" font="UO_DefaultText" maxchars="10" textalign="left">
					<Size>
						<AbsPoint x="70" y="25" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentName">
							<AbsPoint x="0" Y="0"/>
						</Anchor>
					</Anchors>					
