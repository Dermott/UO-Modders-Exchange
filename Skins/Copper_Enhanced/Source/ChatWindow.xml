				</Anchor>
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnMouseOver" function="ChatManager.MouseOver" />
			</EventHandlers>
			<Windows>
				<FullResizeImage name="$parentBackground" layer="background" handleinput="false" texture="chat">
					<Sizes>
						<TopLeft x="25" y="104" />
						<Middle x="230" y="80" />
						<BottomRight x="40" y="1" />
					</Sizes>
					<TexCoords>
						<TopLeft x="1" y="11" />
						<TopCenter x="35" y="11" />
						<TopRight x="720" y="12" />
						<MiddleLeft x="1" y="50" />
						<MiddleCenter x="50" y="50" />
						<MiddleRight x="720" y="70" />
						<BottomLeft x="1" y="50" />
						<BottomCenter x="50" y="50" />
						<BottomRight x="50" y="50" />
					</TexCoords>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="0" y="20" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnMouseOver" function="ChatManager.MouseOver" />
					</EventHandlers>
				</FullResizeImage>

