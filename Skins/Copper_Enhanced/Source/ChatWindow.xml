					</EventHandlers>
				</Button>
				<Button name="$parentHelpButton" sticky="false" backgroundtexture="chat" highlighttexture="chat">
					<Size>
						<AbsPoint x="28" y="45" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" >
							<AbsPoint x="0" y="0"/>
						</Anchor>
					</Anchors>
					<TexCoords>
						<Normal x="780" y="10" />
						<NormalHighlit x="835" y="10" />			
						<Pressed x="835" y="10" />
						<PressedHighlit x="835" y="10" />
