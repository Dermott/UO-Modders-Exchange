					<Anchors>
						<Anchor point="topleft" relativePoint="topleft">
							<AbsPoint x="30" y="24" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright"/>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnMouseOver" function="ChatManager.MouseOver" />
