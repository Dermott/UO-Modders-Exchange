          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft" relativeTo="">
              <AbsPoint x="23" y="13" />
            </Anchor>
          </Anchors>
          <TexCoords x="13" y="427" />
        </DynamicImage>
        <StatusBar name="$parentHealthBar" inherits="TargetStatusBar">
          <Size>
            <AbsPoint x="172" y="6" />
          </Size>
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft">
              <!--<AbsPoint x="45" y="71" />-->
              <AbsPoint x="36" y="58" />
