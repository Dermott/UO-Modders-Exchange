  <Windows>
    <Window name="TargetWindow" movable="true">
      <Size>
        <!--<AbsPoint x="295" y="90" />-->
        <AbsPoint x="252" y="73" />
      </Size>
      <Anchors>
        <Anchor point="center" relativePoint="center" relativeTo="">
          <AbsPoint x="0" y="-484" />
        </Anchor>
      </Anchors>
      <EventHandlers>
        <EventHandler event="OnInitialize" function="TargetWindow.Initialize" />
