          </Anchors>
          <Color r="255" g="255" b="255" a="255" />
        </Label>
        <DynamicImage name="$parentImage" texture="hud_image" handleinput="false" layer="background">
          <Size>
            <!--<AbsPoint x="295" y="90" />-->
            <AbsPoint x="252" y="73" />
